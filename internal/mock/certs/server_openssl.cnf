[req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
x509_extensions = v3_ext

[dn]
C = CN
ST = Test
L = Test
O = TestOrg
OU = TestOU
CN = localhost  # 这里填你的服务端域名（如localhost）

[v3_ext]
subjectAltName = @alt_names
keyUsage = digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth  # 服务端证书专用

[alt_names]
DNS.1 = localhost  # 必须添加，与CN一致或额外添加其他域名
# DNS.2 = test.example.com  # 可选：添加其他需要支持的域名
